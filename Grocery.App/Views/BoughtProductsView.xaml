<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             xmlns:m="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
             x:Class="Grocery.App.Views.BoughtProductsView"
             x:DataType="vm:BoughtProductsViewModel"
             Title="Klanten per product">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Picker voor productselectie -->
        <Picker Grid.Column="0" 
                Grid.Row="0" 
                Margin="10,0,0,0" 
                Title="Klik op onderstaand pijltje om een product te selecteren:"
                ItemsSource="{Binding Products}"
                SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                ItemDisplayBinding="{Binding Name}"
                BackgroundColor="Black"
                TextColor="{StaticResource Secondary}" />

        <!-- Lijst met klanten en boodschappenlijsten -->
        <Border Grid.Row="1" 
                Grid.Column="0" 
                Stroke="Pink" 
                StrokeThickness="4" 
                Padding="5" 
                Margin="5" 
                HorizontalOptions="Center">
            <CollectionView ItemsSource="{Binding BoughtProductsList}" 
                            Margin="5" 
                            HorizontalOptions="Fill"
                            SelectionMode="Single">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="m:BoughtProducts">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- UC13: Toon naam van de klant -->
                            <Label Grid.Column="0" 
                                   Text="{Binding Client.Name}" 
                                   FontAttributes="Bold" 
                                   VerticalOptions="Center" 
                                   Margin="10,0"/>
                            <!-- UC13: Toon naam van de boodschappenlijst -->
                            <Label Grid.Column="1" 
                                   Text="{Binding GroceryList.Name}" 
                                   VerticalOptions="Center" 
                                   HorizontalOptions="End" 
                                   Margin="0,0,10,0"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.EmptyView>
                    <ContentView>
                        <Label Text="Geen klanten gevonden die dit product hebben gekocht" 
                               FontSize="16" 
                               FontAttributes="Italic" 
                               HorizontalTextAlignment="Center"
                               VerticalOptions="Center"/>
                    </ContentView>
                </CollectionView.EmptyView>
            </CollectionView>
        </Border>
    </Grid>
</ContentPage>