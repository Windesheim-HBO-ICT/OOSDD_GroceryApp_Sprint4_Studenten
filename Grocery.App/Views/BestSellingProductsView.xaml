<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             xmlns:m="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
             x:Class="Grocery.App.Views.BestSellingProductsView"
             x:DataType="vm:BestSellingProductsViewModel"
             Title="Best verkochte producten">

    <Shell.TitleView>
        <Grid>
            <Label Text="Best verkochte producten" 
                   FontSize="Large" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <Border Stroke="Pink" StrokeThickness="4" Padding="10" Margin="10" HorizontalOptions="Center">
        <CollectionView ItemsSource="{Binding Products}" 
                        Margin="20" 
                        HorizontalOptions="Center">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <!-- Header van de tabel -->
            <CollectionView.Header>
                <Grid BackgroundColor="DarkGray" Padding="10" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="#" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Label Grid.Column="1" Text="Product" FontAttributes="Bold" VerticalOptions="Center"/>
                    <Label Grid.Column="2" Text="Aantal verkocht" FontAttributes="Bold" HorizontalOptions="End" VerticalOptions="Center"/>
                    <Label Grid.Column="3" Text="Voorraad" FontAttributes="Bold" HorizontalOptions="End" VerticalOptions="Center"/>
                </Grid>
            </CollectionView.Header>

            <!-- Data rijen -->
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:BestSellingProducts">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding Ranking}" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" 
                               FontAttributes="Bold"/>
                        <Label Grid.Column="1" 
                               Text="{Binding Name}" 
                               VerticalOptions="Center"/>
                        <Label Grid.Column="2" 
                               Text="{Binding NrOfSells}" 
                               HorizontalOptions="End" 
                               VerticalOptions="Center"/>
                        <Label Grid.Column="3" 
                               Text="{Binding Stock}" 
                               HorizontalOptions="End" 
                               VerticalOptions="Center"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Border>
</ContentPage>